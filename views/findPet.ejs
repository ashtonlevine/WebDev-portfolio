<div>
    <form id="form">
        <fieldset>
            <legend>Find a Dog/Cat</legend>
            <label for="dogselect">Choose a pet:</label><br>
            <input type="radio" name="pet" value="dog" id="dogselect">
            <label for="dogselect">Dog</label>
            <input type="radio" name="pet" value="cat" id="catselect">
            <label for="catselect">Cat</label><br><br>
            <label for="dogbreed">Choose a dog breed:</label><br>
            <select id="dogbreed">
                <option value="none">Doesn't Matter</option>
                <option value="labrador">Labrador</option>
                <option value="bulldog">Bulldog</option>
                <option value="poodle">Poodle</option>
                <option value="beagle">Beagle</option>
                <option value="germanshepherd">German Shepherd</option>
                <option value="golden retriever">Golden Retriever</option>
                <option value="Griffon Bruxellois">Griffon Bruxellois</option>
            </select><br><br>
            <label for="catbreed">Choose a cat breed:</label><br>
            <select id="catbreed">
                <option value="none">Doesn't Matter</option>
                <option value="Persian">Persian</option>
                <option value="Siamese">Siamese</option>
                <option value="Mainecoon">Mainecoon</option>
            </select>
            <br><br>
            <label for="age">Choose an age:</label><br>
            <select id="age">
                <option value="none">Doesn't Matter</option>
                <option value="young">Young (0 to 1 years old)</option>
                <option value="adult">Adult (2 - 8 years old)</option>
                <option value="senior">Senior (9+ years old)</option>
            </select>
            <br><br>
            <label for="male">Choose a preferred gender:</label><br>
            <input type="radio" name="gender" value="male" id="male">
            <label for="male">Male</label>
            <input type="radio" name="gender" value="female" id="female">
            <label for="female">Female</label>
            <input type="radio" name="gender" value="none" id="none">
            <label for="none">Doesn't Matter</label><br><br>
            <label for="likescats">Behaviour Preference (select those that apply)</label> <br>
            <input type="checkbox" name="behaviour" value="cats" id="likescats">
            <label for="likescats">Gets along with Cats</label><br>
            <input type="checkbox" name="behaviour" value="dogs" id="likesdogs">
            <label for="likesdogs">Gets along with Dogs</label><br>
            <input type="checkbox" name="behaviour" value="people" id="likespeople">
            <label for="likespeople">Gets along with other People/Small Children</label>
            <br><br>
            <input type="submit" name="submit" value="Submit Search Form" id="submit">
            <input type="reset" name="reset" value="Reset Form" id="reset">
        </fieldset>
    </form>
</div>
